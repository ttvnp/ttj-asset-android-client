<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/text_tutorial_welcome"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_above="@+id/button_tutorial_start"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="@string/tutorial_welcome"
        android:textColor="@color/colorIcons"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41000003" />

    <Button
        android:id="@+id/button_tutorial_start"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_accent"
        android:text="@string/tutorial_start"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tutorial_welcome" />

</android.support.constraint.ConstraintLayout>
