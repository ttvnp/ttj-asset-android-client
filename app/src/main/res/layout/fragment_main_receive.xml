<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/receive_option_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/middle_margin"
        android:background="@drawable/background_spinner"
        android:paddingEnd="@dimen/small_margin"
        android:paddingStart="@dimen/small_margin" />

    <ImageView
        android:id="@+id/image_qr_code"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/qr_code" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_set_amount"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/middle_margin"
            android:background="@drawable/button_primary"
            android:paddingEnd="@dimen/large_margin"
            android:paddingStart="@dimen/large_margin"
            android:text="@string/set_amount_desc"
            android:textColor="@color/colorTextOnPrimary"
            android:visibility="gone" />

        <LinearLayout
            android:layout_marginTop="@dimen/middle_margin"
            android:paddingStart="@dimen/middle_margin"
            android:paddingEnd="@dimen/middle_margin"
            android:layout_gravity="center_horizontal"
            android:id="@+id/text_by_stellar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_str_account_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="@string/stellar_address" />

            <TextView
                android:id="@+id/text_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                tools:text="Memo bunmeng.13" />

            <TextView
                android:id="@+id/text_noted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:textColor="@color/md_red_500"
                android:text="@string/str_note" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>